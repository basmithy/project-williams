@model IEnumerable<Project.F1.Models.Constructor>

@{
    ViewData["Title"] = "Constructors Details";
}

<div class="settings-top">
    <div class="content-wrap">
        <div>
            <h1 class="font-offwhite">
                Settings - Constructor
            </h1>
        </div>
    </div>
</div>
<div class="settings-bottom">
    <div class="edit-wrap">
        <a asp-action="Create" class="settings-create-btn">
            <div>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">

                    <path fill-rule="evenodd" clip-rule="evenodd" d="M10 18C14.4183 18 18 14.4183 18 10C18 5.58172 14.4183 2 10 2C5.58172 2 2 5.58172 2 10C2 14.4183 5.58172 18 10 18ZM11 7C11 6.44772 10.5523 6 10 6C9.44772 6 9 6.44772 9 7V9H7C6.44772 9 6 9.44771 6 10C6 10.5523 6.44772 11 7 11H9V13C9 13.5523 9.44772 14 10 14C10.5523 14 11 13.5523 11 13V11H13C13.5523 11 14 10.5523 14 10C14 9.44772 13.5523 9 13 9H11V7Z" fill="#4A5568" />
                </svg>
            </div>
            <h4 class="mb-0">
                Create New Constructor
            </h4>
        </a>
        <div class="edit-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ConstructorName)
                        </th>
                        <th class="mob-hide">
                            @Html.DisplayNameFor(model => model.ConstructorColour)
                        </th>
                        <th class="mob-hide">
                            Drivers
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ConstructorName)
                            </td>
                            <td class="mob-hide">
                                @Html.DisplayFor(modelItem => item.ConstructorColour)
                            </td>
                            <td class="mob-hide">
                                @Html.DisplayFor(modelItem => item.Drivers.Count)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ConstructorId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ConstructorId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ConstructorId" class="font-reject">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



